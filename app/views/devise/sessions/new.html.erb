<%= render "shared/second_header" %>

<% if flash[:alert].present? %>
<div class='login-flash-message'>
    <%= flash[:alert] %>
</div>
<% end %>

<div class="contents_row">
  <div class="container">
    <div class="container_title">家族の情報を入力してください</div>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字(※英字と数字の両方を含めてください)" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:"actions-button" %>
      </div>
      <%= link_to "< もどる", root_path, class:"memo-return-botton" %>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>
