<%= render "shared/second_header" %>

<%= render 'shared/error_messages', model: @user %>

<div class="contents_row">
  <div class="container">
    <h2 class="container_title">家族の情報を入力してください</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">お名前</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"(例) おじいちゃん", maxlength:"20", autofocus: true %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">家族コード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :code, class:"input-default", id:"code", placeholder:"6桁以上の数字(※ 家族アカウント作成時に使います)", minilength: "6" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字(※英字と数字の両方を含めてください)" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class:"actions-button" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>

