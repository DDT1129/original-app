<%= render "shared/second_header" %>

<%= render 'shared/error_messages', model: @user %>

<div class="contents_row">
  <div class="container">
    <div class="container_title">変更したい内容を入力してください</div>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">新しいパスワード（変更する場合は入力してください）</label>
          <%#span class="indispensable">必須</span %>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字(※英字と数字の両方を含めてください)" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">新しいパスワード(確認)</label>
          <%#span class="indispensable">必須</span %>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">現在のパスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :current_password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字(※英字と数字の両方を含めてください)" %>
      </div>

      

      <div class="actions">
        <%= f.submit "変更", class:"actions-button" %>
      </div>
      <%= link_to "< もどる", root_path, class:"memo-return-botton" %>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>
